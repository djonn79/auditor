<Window x:Class="auditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:auditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="10, 10" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Территориальный орган:</TextBlock>
                <ComboBox x:Name="Departments" Height="25" Width="370">
                    <ComboBoxItem>УМВД России по Еврейской автономной области</ComboBoxItem>
                    <ComboBoxItem>МОМВД России "Биробиджанский"</ComboBoxItem>
                    <ComboBoxItem>МОМВД России "Ленинский"</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Административное здание:</TextBlock>
                <ComboBox x:Name="Buildings" Height="25" Width="270">
                    <ComboBoxItem>г. Биробиджан, ул. Ленина, 4</ComboBoxItem>
                    <ComboBoxItem>г. Биробиджан, ул. Пионерская, 61</ComboBoxItem>
                    <ComboBoxItem>г. Биробиджан, пер. МТС, 20а</ComboBoxItem>
                </ComboBox>
            
            <TextBlock>Подразделение:</TextBlock>
            <ComboBox x:Name="Divisions" Height="25" Width="170">
                    <ComboBoxItem>ОДиР</ComboBoxItem>
                    <ComboBoxItem>ЦИТСиЗИ</ComboBoxItem>
                    <ComboBoxItem>ОЭБиПК</ComboBoxItem>
            </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Тип используемой техники:</TextBlock>
                <ComboBox x:Name="TechTypes" Height="25" Width="200">
                    <ComboBoxItem>ПЭВМ (системный блок, монитор, клавиатура, мышь)</ComboBoxItem>
                    <ComboBoxItem>Принтер</ComboBoxItem>
                    <ComboBoxItem>МФУ</ComboBoxItem>
                    <ComboBoxItem>Сканер</ComboBoxItem>
                </ComboBox>
                <TextBlock>Инвентарный номер:</TextBlock>
                <TextBox Name="inventoryNumber" Height="25" Width="150" VerticalContentAlignment="Center"></TextBox>
                <TextBlock>Заводской номер:</TextBlock>
                <TextBox Name="serialNumber" Height="25" Width="150"></TextBox>
            </StackPanel>
            <Button Height ="25" Width="300" Margin="10" HorizontalAlignment="Left" Click="OnClick">Распечатать тех.паспорт</Button>
        </StackPanel>
        
    </Grid>
</Window>
